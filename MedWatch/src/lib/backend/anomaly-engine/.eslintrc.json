{
"env": {
    "node": true,
    "es2022": true,
    "jest": true
},
"extends": [
    "eslint:recommended",
    "prettier"
],
"parserOptions": {
    "ecmaVersion": 2022
},
"rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-var": "error",
    "prefer-const": "warn"
}
}
